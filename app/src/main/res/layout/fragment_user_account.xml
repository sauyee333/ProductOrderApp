<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgImageContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/toolbar_height"
    android:background="@color/lightGray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/loginSignupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/loginOption"
                android:layout_width="@dimen/general_button_width"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:elevation="9dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/loginText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/loginUnderline"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="Admin login"
                        android:textColor="@drawable/text_color"
                        android:textSize="@dimen/font_size_medium" />

                    <View
                        android:id="@+id/loginUnderline"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/line_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnSignup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/signupText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/signupUnderline"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="User sign up"
                        android:textColor="@drawable/text_color"
                        android:textSize="@dimen/font_size_medium" />

                    <View
                        android:id="@+id/signupUnderline"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/line_color" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginOption">

                <LinearLayout
                    android:id="@+id/userSignupLayout"
                    android:layout_width="@dimen/general_input_width"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/clientLogoutLayout"
                        android:layout_width="@dimen/general_button_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:elevation="9dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/clientMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="50dp"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_size_medium" />

                        <Button
                            android:id="@+id/clientLogoutButton"
                            android:layout_width="@dimen/general_button_width"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="Logout"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_size_large" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clientInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mobileText"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Mobile"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <RelativeLayout
                                android:id="@+id/mobileInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/transparent_grey_border_background"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/mobileSignup"
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp"
                                    android:layout_toLeftOf="@+id/clearMobile"
                                    android:layout_toStartOf="@+id/clearMobile"
                                    android:background="@android:color/transparent"
                                    android:hint=""
                                    android:inputType="phone"
                                    android:maxLength="254"
                                    android:padding="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/font_size_medium"
                                    tools:text="alibaba@gmail.com" />

                                <LinearLayout
                                    android:id="@+id/clearMobile"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_close_white" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Name"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <RelativeLayout
                                android:id="@+id/nameInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/transparent_grey_border_background"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/nameSignup"
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp"
                                    android:layout_toLeftOf="@+id/clearName"
                                    android:layout_toStartOf="@+id/clearName"
                                    android:background="@android:color/transparent"
                                    android:hint=""
                                    android:inputType="textCapCharacters"
                                    android:maxLength="254"
                                    android:padding="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/font_size_medium"
                                    tools:text="alibaba@gmail.com" />

                                <LinearLayout
                                    android:id="@+id/clearName"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_close_white" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Email"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <RelativeLayout
                                android:id="@+id/emailSignupLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/transparent_grey_border_background"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/emailSignup"
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp"
                                    android:layout_toLeftOf="@+id/clearEmailSignup"
                                    android:layout_toStartOf="@+id/clearEmailSignup"
                                    android:background="@android:color/transparent"
                                    android:hint="abc@gmail.com"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="254"
                                    android:padding="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/font_size_medium"
                                    tools:text="alibaba@gmail.com" />

                                <LinearLayout
                                    android:id="@+id/clearEmailSignup"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_close_white" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Date of birth"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <RelativeLayout
                                android:id="@+id/birthInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/transparent_grey_border_background"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/birthSignup"
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp"
                                    android:layout_toLeftOf="@+id/clearBirth"
                                    android:layout_toStartOf="@+id/clearBirth"
                                    android:background="@android:color/transparent"
                                    android:hint="DD/MM/YYYY"
                                    android:inputType="date"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:maxLength="254"
                                    android:padding="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/font_size_medium"
                                    tools:text="alibaba@gmail.com" />

                                <LinearLayout
                                    android:id="@+id/clearBirth"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_close_white" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/signupDone"
                            android:layout_width="@dimen/general_button_width"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorPrimary"
                            android:padding="16dp"
                            android:text="@string/done"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_medium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adminLoginLayout"
                    android:layout_width="@dimen/general_input_width"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/logoutLayout"
                        android:layout_width="@dimen/general_button_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:elevation="9dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="50dp"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_size_medium" />

                        <Button
                            android:id="@+id/logoutButton"
                            android:layout_width="@dimen/general_button_width"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="Logout"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_size_large" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/loginLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userNameLabel"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Username"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/transparent_grey_border_background"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/userNameInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp"
                                    android:layout_toLeftOf="@+id/clearMobileLogin"
                                    android:layout_toStartOf="@+id/clearMobileLogin"
                                    android:background="@android:color/transparent"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="254"
                                    android:padding="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/font_size_medium"
                                    tools:text="alibaba@gmail.com" />

                                <LinearLayout
                                    android:id="@+id/clearMobileLogin"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_close_white" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/passwordLabel"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Password"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/transparent_grey_border_background">

                                <EditText
                                    android:id="@+id/passwordInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp"
                                    android:layout_toLeftOf="@+id/clearPassword"
                                    android:layout_toStartOf="@+id/clearPassword"
                                    android:background="@android:color/transparent"
                                    android:inputType="textPassword"
                                    android:maxLength="254"
                                    android:padding="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hintGray"
                                    android:textSize="@dimen/font_size_medium"
                                    tools:text="alibaba@gmail.com" />

                                <LinearLayout
                                    android:id="@+id/clearPassword"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_close_white" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/adminMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="end"
                                android:text="Admin"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_size_medium" />

                            <CheckBox
                                android:id="@+id/useAdmin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:checked="true" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/loginDone"
                            android:layout_width="@dimen/general_button_width"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorPrimary"
                            android:padding="16dp"
                            android:text="@string/done"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_medium" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
